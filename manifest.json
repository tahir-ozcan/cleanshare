{
  "manifest_version": 3,
  "name": "CleanShare â€” Link Cleaner",
  "version": "0.1.0",
  "description": "Removes tracking junk from URLs when you browse, click, or copy. Privacy-first. Zero telemetry.",
  "action": { "default_popup": "popup.html" },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "contextMenus",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js", "type": "module" },
  "declarative_net_request": {
    "rule_resources": [
      { "id": "rules_main", "enabled": true, "path": "rules.json" }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_start" }
  ]
}
